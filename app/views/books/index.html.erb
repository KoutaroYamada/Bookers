<% if flash[:notice] %>
  <%= flash[:notice] %>
<% end %>

<h1>Books</h1>

<table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Body</th>
        <th colspan="3"></th>
      </tr>
    </thead>


    <tbody>

      <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td><%= link_to "Show", book_path(book.id) %></td>
        <td><%= link_to "Edit", edit_book_path(book.id) %></td>
        <td><%= link_to "Destroy", book_path(book.id), method: :'delete', "data-confirm" => "Are you sure?" %></td>
      </tr>
      <% end %>
    </tbody>

</table>

<h1>New Book</h1>
<%= form_for(@book) do |f| %>

    <h4>タイトル</h4>
    <%= f.text_field :title %>

    <h4>本文</h4>
    <%= f.text_area :body %>

    <%= f.submit 'create Book' %>

<% end %>
